<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/home.css">
    <title>Be Grateful</title>
    <script src="https://kit.fontawesome.com/6a17d03417.js" crossorigin="anonymous"></script>
</head>

<body>
    <div id="container">
        <div id="navbar">
            <div id="logo">
                <img src="/img/logo.jpg" alt="" id="logo-image">
            </div>
            <div id="nav">

            </div>
        </div>
        
        <div id="input-container">
            <form action="/add-journal" method="post" id="input-form">
                <textarea name="journal_data" id="input" cols="45" rows="auto" placeholder="Enter here" spellcheck="false"></textarea>
                <button type="submit" class="btn" id="btn"><i class="fa-solid fa-check"></i></button>
            </form>
        </div>

        <div id="journal-container">
            <ul id="journal-list">
                <% for( let i of journal_list) { %>
                    <li class="journal">
                        <div class="journal-top">
                            <p class="date">
                                <%= i.date.getDate() %> <%= monthNames[i.date.getMonth()] %> <%= i.date.getFullYear() %>  
                            </p>
                            <div class="options" id="<%= i._id %>">
                                <button class="edit btn"><i class="fa-solid fa-pen"></i></button>
                                <button class="delete btn"><i class="fa-regular fa-trash-can"></i></button>
                            </div>  
                        </div>
                        <div class="data-container" contenteditable="false" spellcheck="false"><%= i.journal_data %></div>
                    </li>
                <% } %>
            </ul>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <script src="/js/home.js"></script>
</body>

</html>